.page-wrapper.work
  background-color: #ebd2b5;
  .inner
    > header
      h1;

    > section.content

        .work-list
          list-style: none;
          margin: 0;
          padding: 0;

          .work-item
            background: #fff;
            border-radius: 5px 5px 2px 2px;
            cursor:pointer;
            float: left;
            margin-bottom: 10px;
            min-height: 90px;
            width: 100%;
            transform: translateY(0);
            box-shadow:none;
            transition: all .3s ease-in-out;

            @media $media-sm-min
              width: 31%;
              margin: 1%;

            figure
              background-position: center;
              background-size: cover;
              border: 1px solid #EEE;
              border-radius: 4px 4px 1px 1px;
              height: 200px;
              margin: 7px;

            .title
              padding:5px 10px;
              h3
                font-size: 1.4em;
                font-weight: 300;
                margin-top: .5em;

            &:hover
              transform: translateY(-7px);
              box-shadow: 2px 2px 10px rgba(55, 55, 55, .5);
